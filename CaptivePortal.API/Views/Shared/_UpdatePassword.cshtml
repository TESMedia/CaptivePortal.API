@model CaptivePortal.API.Models.UserViewModel
<br />
<br />
<div class="form-horizontal">
    <div class="form-group">
        <label class="control-label col-sm-2" for="FirstName">Password:</label>
        <div class="col-md-3">
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @name = "password" } })
        </div>
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="FirstName">User of data opt-in:</label>
        <div class="col-md-3">
            <input class="form-control" type="checkbox" id="checkbox1" name="Autologin" style="width:30px;">
        </div>
        <label class="control-label col-sm-2" for="FirstName"></label>
        <div class="col-md-3">
        </div>
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="FirstName">Promotion email opt-in :</label>
        <div class="col-md-3">
            <input class="form-control" type="checkbox" id="checkbox1" name="Autologin" style="width:30px;">
        </div>
        <label class="control-label col-sm-2" for="FirstName"></label>
        <div class="col-md-3">
        </div>
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="FirstName">3rd party opt-in :</label>
        <div class="col-md-3">
            <input class="form-control" type="checkbox" id="checkbox1" name="Autologin" style="width:30px;">
        </div>
        <label class="control-label col-sm-2" for="FirstName"></label>
        <div class="col-md-3">
        </div>
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="FirstName">Terms & Conditions:</label>
        <div class="col-md-1">
            <input class="form-control" type="text" id="checkbox1" name="Autologin">
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
            <input type="submit" id="update" class="btn btn-success" value="Upadate Password" />
        </div>
    </div>
</div>
