@using CaptivePortal.API.Models
@model IEnumerable<UserViewModel>

<br />
<br />
<div class="form-horizontal" style="margin-right: 40%;">
    <div class="form-group">
        <label for="mobile-number" class="control-label col-md-3">Mobile Number:</label>
        <div class="col-md-5">
            <input id="mobile-number" class="form-control col-md-2" type="text" name="MobileNumber">
        </div>
    </div>

    <div class="form-group">
        <label for="gender" class="control-label col-md-3">Gender:</label>
        <div class="col-md-5">
            <input id="gender" class="form-control col-md-2" type="text" name="Gender">
        </div>

    </div>
    <div class="form-group">
        <label for="ageRange" class="control-label col-md-3">Age Range:</label>
        <div class="col-md-5">
            <input id="ageRange" class="form-control col-md-2" type="text" name="Age">
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
            <input type="submit" id="update" class="btn btn-success" value="Upadate User" />
        </div>
    </div>




    <div class="form-group">
        <label for="promotional_email" class="control-label col-md-3 col-sm-3 col-xs-12">Promotion email opt-in:</label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <input class="form-control col-md-7 col-xs-12" type="checkbox" id="checkbox1" name="promotional_email" style="width:30px;">
        </div>
    </div>
    <div class="form-group">
        <label for="ThirdPartyOptIn" class="control-label col-md-3 col-sm-3 col-xs-12">3rd party opt-in:</label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <input class="form-control col-md-7 col-xs-12" type="checkbox" id="checkbox1" name="ThirdPartyOptIn" style="width:30px;">
        </div>
    </div>
    <div class="form-group">
        <label for="Term_conditions" class="control-label col-md-3">Terms & Conditions:</label>
        <div class="col-md-5">
            <input class="form-control col-md-7 col-xs-12" type="text" id="Term_conditions" name="Term_conditions">
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
            <input type="submit" id="update" class="btn btn-danger" value="Delete User" />
        </div>
    </div>

</div>





