@model CaptivePortal.API.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "ResetPassword";
}

<h2>Reset Your Password To Login</h2>


<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_content">
                <br />
                <div id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">

                    @using (Html.BeginForm("ResetPasswordForNewUser", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.HiddenFor(m => m.Email)
                        @Html.HiddenFor(m => m.Code)
                        <div class="form-group">
                            <label for="Email" class="control-label col-md-3 col-sm-3 col-xs-12">Email:</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control", @type = "input", @readonly = "readonly" } })
                            </div>
                        </div>


                        <div class="form-group">
                            <label for="Password" class="control-label col-md-3 col-sm-3 col-xs-12">Password:</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input id="Password" class="form-control col-md-7 col-xs-12" type="password" name="Password">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="ConfirmPassword" class="control-label col-md-3 col-sm-3 col-xs-12">Confirm Password:</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input id="ConfirmPassword" class="form-control col-md-7 col-xs-12" type="password" name="ConfirmPassword">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                <input type="submit" id="resetPassword" class="btn btn-success" value="ResetPassword" />

                            </div>

                        </div>
                    }
                </div>
            </div>
        </div>

    </div>
</div>
